<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false" android:state_focused="false" android:state_enabled="true">
        <shape>
            <gradient
                android:centerY="0.2"
                android:startColor="@color/hodoo_midle_pink"
                android:centerColor="@color/hodoo_midle_pink"
                android:endColor="@color/hodoo_midle_pink"
                android:angle="270"
                />
            <stroke
                android:width="1dp"
                android:color="@color/hodoo_midle_pink" />
            <corners 
                android:radius="58dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#4cc7c7cd"/>
            <corners android:radius="58dp" />
        </shape>

    </item>
</selector>