<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/hodoo_midle_pink</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--Status Bar 배경색-->
        <item name="android:statusBarColor">@color/white</item>
        <!--Status Bar 글자색깔-->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorBackground">@color/hodoo_new_background_color</item>
        <item name="colorPrimaryDark" tools:targetApi="23" tools:ignore="DuplicateDefinition">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23" tools:ignore="DuplicateDefinition">true</item>

    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Edittext">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:colorControlActivated">@color/mainBlack</item>
    </style>

    <style name="Edittext.Email">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:imeActionId">6</item>
        <item name="android:imeActionLabel">@string/action_sign_in_short</item>
        <item name="android:imeOptions">actionUnspecified</item>
    </style>

    <style name="Edittext.Password">
        <item name="android:inputType">textPassword</item>
        <item name="android:imeActionId">6</item>
        <item name="android:imeActionLabel">@string/action_sign_in_short</item>
        <item name="android:imeOptions">actionUnspecified</item>
    </style>


    <style name="CommonLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/labelColor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommonBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/common_large_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CalorieProgress" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>


</resources>
